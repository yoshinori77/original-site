<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>Chat</servlet-name>
        <servlet-class>controller.Chat</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChatHistory</servlet-name>
        <servlet-class>controller.ChatHistory</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostComplete</servlet-name>
        <servlet-class>controller.PostComplete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateChannel</servlet-name>
        <servlet-class>controller.CreateChannel</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateChannelComplete</servlet-name>
        <servlet-class>controller.CreateChannelComplete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Mail</servlet-name>
        <servlet-class>controller.Mail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Contact</servlet-name>
        <servlet-class>controller.Contact</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContactConfirm</servlet-name>
        <servlet-class>controller.ContactConfirm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MailSample</servlet-name>
        <servlet-class>controller.MailSample</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Chat</servlet-name>
        <url-pattern>/Chat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChatHistory</servlet-name>
        <url-pattern>/ChatHistory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostComplete</servlet-name>
        <url-pattern>/PostComplete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateChannel</servlet-name>
        <url-pattern>/CreateChannel</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateChannelComplete</servlet-name>
        <url-pattern>/CreateChannelComplete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Mail</servlet-name>
        <url-pattern>/Mail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Contact</servlet-name>
        <url-pattern>/Contact</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContactConfirm</servlet-name>
        <url-pattern>/ContactConfirm</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MailSample</servlet-name>
        <url-pattern>/MailSample</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
